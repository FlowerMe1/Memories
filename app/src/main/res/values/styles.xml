<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary_txt_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#6e000000</item>
    </style>

    <style name="TextAppearence.App.ErrorTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInplutLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:theme">@style/ControlStyle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="ControlStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/secondary_txt_color</item>
        <item name="colorControlActivated">@color/secondary_txt_color</item>
        <item name="colorControlHighlight">#6e000000</item>
        <item name="android:textColorHint">@color/secondary_txt_color</item>
    </style>

    <style name="AppTheme.EditText1">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_txt_color</item>
        <item name="android:textColorHint">#6e000000</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

</resources>
